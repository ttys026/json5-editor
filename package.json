{
  "name": "json5-editor",
  "version": "1.0.0-beta.0",
  "scripts": {
    "start": "dumi dev",
    "docs:build": "dumi build",
    "docs:deploy": "gh-pages -d docs-dist",
    "build": "tsc && webpack",
    "deploy": "npm run docs:build && npm run docs:deploy",
    "release": "npm run build && npm publish",
    "prettier": "prettier --write \"**/*.{js,jsx,tsx,ts,less,md,json}\"",
    "test": "umi-test",
    "test:coverage": "umi-test --coverage"
  },
  "main": "dist/index.js",
  "typings": "dist/index.d.ts",
  "gitHooks": {
    "pre-commit": "lint-staged"
  },
  "lint-staged": {
    "*.{js,jsx,less,md,json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "prettier --parser=typescript --write"
    ]
  },
  "dependencies": {
    "ahooks": "^2.9.6",
    "prismjs": "^1.23.0",
    "react": "^16.12.0",
    "react-simple-code-editor": "^0.11.0",
    "typescript": "^4.0.0"
  },
  "devDependencies": {
    "@types/prismjs": "^1.16.3",
    "@umijs/test": "^3.0.5",
    "babel": "^6.23.0",
    "babel-loader": "^8.2.2",
    "css-loader": "^5.1.3",
    "dumi": "^1.0.13",
    "father-build": "^1.17.2",
    "gh-pages": "^3.0.0",
    "less-loader": "^5.0.0",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "style-loader": "^2.0.0",
    "typescript": "^4.2.3",
    "webpack": "^4.40.2",
    "webpack-cli": "^3.3.9",
    "yorkie": "^2.0.0"
  }
}
